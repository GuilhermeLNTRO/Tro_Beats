<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TROBeats - Home</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header class="header">
        <div class="container header-content">
            <div class="logo">
                <a href="/" aria-label="Página Inicial"> <h1>TROBeats</h1> </a>
            </div>
            <div class="header-actions">
                <a href="/vender" class="btn btn-primary">Começar a Vender</a>
                <a href="/register" class="btn btn-secondary">Cadastre-se</a>
                <a href="/login" class="user-icon" aria-label="Perfil do Usuário"><i class="fas fa-user-circle"></i></a>
                <a href="/carrinho" class="cart-icon" aria-label="Carrinho de Compras"><i class="fas fa-shopping-cart"></i></a>
            </div>
        </div>
    </header>

    <main class="main-content">
        <section class="trending-beats section-padding">
            <div class="container">
                <h2>Beats em Destaque</h2>
                <div class="beat-grid">
                    <% trendingBeats.forEach(function(beat) { %>
                        <div class="beat-card <%= beat.featured ? 'featured-card' : '' %>" data-beat-id="<%= beat.id %>">
                            <img src="<%= beat.cover %>" alt="Capa do Beat: <%= beat.title %>">
                            <div class="beat-info">
                                <h3><%= beat.title %></h3>
                                <p class="artist"><%= beat.artist %></p>
                                <div class="beat-actions">
                                    
                                    <span class="price">R$<%= parseFloat(beat.price).toFixed(2).replace('.', ',') %></span>
                                    
                                    <button class="btn-icon play-beat-btn" aria-label="Ouvir Beat" 
                                            data-beat-id="<%= beat.id %>" 
                                            data-beat-title="<%= beat.title || beat.Title %>" 
                                            data-beat-artist="<%= beat.artist || beat.ArtistName %>">
                                        <i class="fas fa-play"></i>
                                    </button>
                                    
                                    <button class="btn btn-primary add-to-cart-btn"
                                            data-id="<%= beat.id %>"
                                            data-title="<%= beat.title || beat.Title %>"
                                            data-artist="<%= beat.artist || beat.ArtistName %>"
                                            data-price="<%= parseFloat(beat.price).toFixed(2) %>"
                                            data-cover="<%= beat.cover || beat.CoverImageURL %>">
                                        Adicionar ao Carrinho
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <section class="new-releases section-padding">
            <div class="container">
                <h2>Novos Lançamentos</h2>
                <div class="beat-grid">
                    <% newReleases.forEach(function(beat) { %>
                        <div class="beat-card" data-beat-id="<%= beat.id %>">
                            <img src="<%= beat.cover %>" alt="Capa do Beat: <%= beat.title %>">
                            <div class="beat-info">
                                <h3><%= beat.title %></h3>
                                <p class="artist"><%= beat.artist %></p>
                                <div class="beat-actions">
                                    
                                    <span class="price">R$<%= parseFloat(beat.price).toFixed(2).replace('.', ',') %></span>
                                    
                                    <button class="btn-icon play-beat-btn" aria-label="Ouvir Beat" 
                                            data-beat-id="<%= beat.id %>" 
                                            data-beat-title="<%= beat.title || beat.Title %>" 
                                            data-beat-artist="<%= beat.artist || beat.ArtistName %>">
                                        <i class="fas fa-play"></i>
                                    </button>
                                    
                                    <button class="btn btn-primary add-to-cart-btn"
                                            data-id="<%= beat.id %>"
                                            data-title="<%= beat.title || beat.Title %>"
                                            data-artist="<%= beat.artist || beat.ArtistName %>"
                                            data-price="<%= parseFloat(beat.price).toFixed(2) %>"
                                            data-cover="<%= beat.cover || beat.CoverImageURL %>">
                                        Adicionar ao Carrinho
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 TROBeats. Todos os direitos reservados.</p>
        </div>
    </footer>
    
    <!-- Player de Áudio Melhorado -->
    <div class="audio-player-container">
        <audio id="audioPlayer" src="" preload="metadata"></audio>
        <div class="player-controls">
            <button id="playPauseBtn"><i class="fas fa-play"></i></button>
        </div>
        <div class="progress-bar-container">
            <div class="beat-info-display">
                <span id="playerBeatTitle">Nenhum beat</span>
                <span id="playerBeatArtist"></span>
            </div>
            <div class="progress-bar">
                <div id="progress"></div>
            </div>
        </div>
    </div>

    <script src="/js/script.js"></script>
    <script src="/js/add-to-cart.js"></script>
    <script src="/js/player.js"></script>
</body>
</html>
