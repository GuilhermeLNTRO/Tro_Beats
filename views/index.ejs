<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TROBeats - Home</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header class="header">
        <div class="container header-content">
            <div class="logo">
                <h1>TROBeats</h1>
            </div>
            <nav class="main-nav">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/catalogo">Catálogo</a></li>
                    <li><a href="/perfil">Perfil</a></li>
                    <li><a href="/views/carrinho.ejs">Carrinho</a></li>
                </ul>
            </nav>
            <div class="header-actions">
                <div class="search-bar">
                    <input type="text" placeholder="Procurar Trap ou Drill ou Juice Wrld...">
                    <button aria-label="Pesquisar"><i class="fas fa-search"></i></button>
                </div>
                <a href="/vender" class="btn btn-primary">Começar a Vender</a>
                <a href="/register" class="btn btn-secondary">Cadastre-se</a> <a href="/login" class="user-icon" aria-label="Perfil do Usuário"><i class="fas fa-user-circle"></i></a>
                <a href="/carrinho" class="cart-icon" aria-label="Carrinho de Compras"><i class="fas fa-shopping-cart"></i></a>
            </div>
        </div>
    </header>

    <main class="main-content">
        <section class="trending-beats section-padding">
            <div class="container">
                <h2>Beats em Destaque</h2>
                <div class="beat-grid">
                    <% trendingBeats.forEach(function(beat) { %>
                        <div class="beat-card <%= beat.featured ? 'featured-card' : '' %>" data-beat-id="<%= beat.id %>">
                            <img src="<%= beat.cover %>" alt="Capa do Beat: <%= beat.title %>">
                            <div class="beat-info">
                                <h3><%= beat.title %></h3>
                                <p class="artist"><%= beat.artist %></p>
                                <div class="beat-actions">
                                    <span class="price">$<%= beat.price %></span>
                                    <button class="btn-icon" aria-label="Ouvir Beat"><i class="fas fa-play"></i></button>
                                    <button class="btn-icon" aria-label="Baixar Beat"><i class="fas fa-download"></i></button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
                <a href="/catalogo" class="see-more">Ver mais</a>
            </div>
        </section>

        <section class="new-releases section-padding">
            <div class="container">
                <h2>Novos Lançamentos</h2>
                <div class="beat-grid">
                    <% newReleases.forEach(function(beat) { %>
                        <div class="beat-card" data-beat-id="<%= beat.id %>">
                            <img src="<%= beat.cover %>" alt="Capa do Beat: <%= beat.title %>">
                            <div class="beat-info">
                                <h3><%= beat.title %></h3>
                                <p class="artist"><%= beat.artist %></p>
                                <div class="beat-actions">
                                    <span class="price">$<%= beat.price %></span>
                                    <button class="btn-icon" aria-label="Ouvir Beat"><i class="fas fa-play"></i></button>
                                    <button class="btn-icon" aria-label="Baixar Beat"><i class="fas fa-download"></i></button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 TROBeats. Todos os direitos reservados.</p>
        </div>
    </footer>

    <script src="/js/script.js"></script>
</body>
