<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrinho de Compras - TROBeats</title>
    
    <!-- CSS Padrão do Projeto (Onde estão as suas classes) -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header class="header">
        <div class="container header-content">
            <div class="logo">
                <a href="/" aria-label="Página Inicial"> <h1>TROBeats</h1> </a>
            </div>
            <div class="header-actions">
                <a href="/perfil" class="user-icon" aria-label="Perfil do Usuário"><i class="fas fa-user-circle"></i></a>
                <a href="/logout" class="btn btn-secondary">Sair</a>
            </div>
        </div>
    </header>

    <main class="main-content section-padding">
        <div class="container cart-page">
            <h2 class="section-title">Meu Carrinho</h2>

            <% if (cartItems.length === 0) { %>
                <div class="empty-message">
                    <p>Seu carrinho está vazio.</p>
                    <a href="/" class="btn btn-primary" style="margin-top: 20px;">Voltar para a Loja</a>
                </div>
            <% } else { %>
                <div class="cart-table-container">
                    <table class="cart-table">
                        <thead>
                            <tr>
                                <th>Produto</th>
                                <th>Quantidade</th>
                                <th>Subtotal</th>
                                <th>Remover</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% cartItems.forEach(function(item) { %>
                                <tr>
                                    <td>
                                        <div class="cart-item-info">
                                            <img src="<%= item.cover %>" alt="Capa: <%= item.title %>">
                                            <div>
                                                <h3><%= item.title %></h3>
                                                <p class="artist"><%= item.artist %></p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <!-- Quantidade (simplificada para 1) -->
                                        <span class="item-quantity"><%= item.quantity %></span>
                                    </td>
                                    <td>
                                        <span class="subtotal">R$<%= (item.price * item.quantity).toFixed(2).replace('.', ',') %></span>
                                    </td>
                                    <td>
                                        <!-- Botão de remover (usando classes do style.css) -->
                                        <button class="btn-icon btn-remove delete-item-btn" data-id="<%= item.id %>" aria-label="Remover item">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </td>
                                </tr>
                            <% }); %>
                            
                            <!-- Linha do Total (conforme style.css) -->
                            <tr class="total-row">
                                <td colspan="3" class="total-label">Total:</td>
                                <td class="total-price">R$<%= totalAmount.toFixed(2).replace('.', ',') %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Ações do Carrinho (conforme style.css) -->
                <div class="cart-actions">
                    <a href="/" class="btn btn-secondary">Continuar Comprando</a>
                    <!-- Este botão agora leva para a página de checkout separada -->
                    <a href="/checkout" class="btn btn-primary">Ir para Checkout</a>
                </div>
            <% } %>
            
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 TROBeats. Todos os direitos reservados.</p>
        </div>
    </footer>
    
    <!-- Chamada ao ficheiro de lógica do carrinho (para remoção de itens) -->
    <script src="/js/cart-logic.js"></script>
</body>
</html>

