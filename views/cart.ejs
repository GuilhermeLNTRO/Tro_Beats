<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TROBeats - Home</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header class="header">
        <div class="container header-content">
            <div class="logo">
                <a href="/" aria-label="Página Inicial"> <h1>TROBeats</h1>
                </a>
            </div>
            <div class="header-actions">

                <a href="/vender" class="btn btn-primary">Começar a Vender</a>
                <a href="/register" class="btn btn-secondary">Cadastre-se</a>
                <a href="/login" class="user-icon" aria-label="Perfil do Usuário"><i class="fas fa-user-circle"></i></a>
                <a href="/carrinho" class="cart-icon" aria-label="Carrinho de Compras"><i class="fas fa-shopping-cart"></i></a>
            </div>
        </div>
    </header>

    <main class="main-content cart-page">
        <section class="cart-section section-padding">
            <div class="container">
                <h2>Seu Carrinho de Compras</h2>

                <% if (cartItems && cartItems.length > 0) { %>
                    <div class="cart-table-container">
                        <table class="cart-table">
                            <thead>
                                <tr>
                                    <th>Produto</th>
                                    <th>Preço</th>
                                    <th>Quantidade</th>
                                    <th>Subtotal</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let total = 0; %>
                                <% cartItems.forEach(item => { %>
                                    <% const subtotal = item.price * item.quantity; %>
                                    <% total += subtotal; %>
                                    <tr data-item-id="<%= item.id %>">
                                        <td>
                                            <div class="cart-item-info">
                                                <img src="<%= item.cover %>" alt="Capa do Beat: <%= item.title %>">
                                                <h3><%= item.title %></h3>
                                                <p class="artist"><%= item.artist %></p>
                                            </div>
                                        </td>
                                        <td>$<%= item.price %></td>
                                        <td>
                                            <div class="quantity-control">
                                                <button class="btn-icon btn-decrease" aria-label="Diminuir Quantidade"><i class="fas fa-minus"></i></button>
                                                <input type="number" class="quantity-input" value="<%= item.quantity %>" min="1">
                                                <button class="btn-icon btn-increase" aria-label="Aumentar Quantidade"><i class="fas fa-plus"></i></button>
                                            </div>
                                        </td>
                                        <td class="subtotal">$<%= subtotal.toFixed(2) %></td>
                                        <td>
                                            <button class="btn-icon btn-remove" aria-label="Remover Item"><i class="fas fa-trash"></i></button>
                                        </td>
                                    </tr>
                                <% }); %>
                                <tr class="total-row">
                                    <td colspan="3" class="total-label">Total:</td>
                                    <td class="total-price">$<%= total.toFixed(2) %></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="cart-actions">
                        <a href="/catalogo" class="btn btn-secondary">Continuar Comprando</a>
                        <button class="btn btn-primary">Finalizar Compra</button>
                    </div>
                <% } else { %>
                    <p class="empty-cart-message">Seu carrinho está vazio.</p>
                    <a href="/catalogo" class="btn btn-secondary">Começar a Comprar</a>
                <% } %>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 TROBeats. Todos os direitos reservados.</p>
        </div>
    </footer>

    <script src="/js/cart.js"></script> 
</body>
</html>